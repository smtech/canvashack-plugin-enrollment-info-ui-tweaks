<?xml version="1.0"?>
<canvashack>
	<name>Enrollment Info UI Tweaks</name>
	<abstract>Tweak some annoying default settings to better ones when looking at enrollment information</abstract>
	<authors>
		<author>
			<name>Seth Battis</name>
			<email>SethBattis@stmarksschool.org</email>
		</author>
	</authors>
	<components>
		<javascript path="enrollment-info-ui-tweaks.js" />
		<canvas>
			<pages>
				<include>
					<page pattern="%courses/\d+/settings%" />
				</include>
			</pages>
			<dom>
				<selector load="resizeSisId()">#course_sis_source_id</selector>
			</dom>
		</canvas>	
	</components>
</canvashack>